URxvt*font: xft:Ubuntu Mono:pixelsize=18antialias=true
URxvt*borderLess: false
! URxvt*externalBorder: 0
! URxvt*internalBorder: 2
URxvt*scrollBar: false
! URxvt*depth: 32
! URxvt*cursorBlink: false
! URxvt*inheritPixmap: false
! URxvt*termName: rxvt-unicode
! URxvt*scrollTtyOutput: false
! URxvt*scrollTtyKeypress: true
! URxvt*mouseWheelScrollPage: false
! URxvt.underlineURLs: true
URxvt*background: #000000
URxvt*foreground: #ffffff

! Sane Copy and pasting
! https://wiki.archlinux.org/index.php/Rxvt-unicode#Cut_and_paste
URxvt.perl-ext-common: default,clipboard,matcher,fullscreen,font-size
URxvt.iso14755: False
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! Clickable URLs
! https://wiki.archlinux.org/index.php/Rxvt-unicode#Clickable_URLs
! M-Delete: list of urls
! C-Delete: last url
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list
URxvt.matcher.rend.0: Uline Bold fg5

! Fullscreen
URxvt.keysym.F11: perl:fullscreen:switch

! Font-size
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

URxvt.iso14755_52: false
