#Installation commands
alias install='sudo apt-get install'
alias upgrade='sudo apt-get update'
alias update='sudo apt-get update'
alias search='sudo apt-cache search'
alias show='sudo apt-cache show'

#Network commands
alias pi='ping 8.8.8.8'
alias pg='ping goo.gl'

#Power Commands
alias sd='shutdown -h now'
alias sr='shutdown -r now'

#Logout
#KDE Desktop
alias lg='qdbus org.kde.ksmserver /KSMServer logout 1 0 -1' 
#GNOME
#alias lg='gnome-session-save --logout'